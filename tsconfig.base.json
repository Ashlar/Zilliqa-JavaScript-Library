{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
      "*": ["typings/*"],
      "elliptic/lib/elliptic/ec/signature": ["typings/signature"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "es5"
  }
}
